<template name="picker"><block wx:if="undefined"><view class="wux-picker-container"><view bindtap="{{hide}}" class="weui-mask {{animateCss[1]}}" hidden="{{!visible}}"></view><view class="wux-picker {{animateCss[0]}}"><block wx:if="undefined"><view class="picker-header"><view class="picker-header-inner"><view class="title">{{title}}</view><view bindtap="{{hide}}" class="picker-button close-picker">{{toolbarCloseText}}</view></view></view></block><picker-view bindchange="{{bindChange}}" class="wux-picker-view" indicatorStyle="height: 32px;" value="{{value}}"><block wx:for="{{cols}}" wx:for-item="col"><picker-view-column class="{{col.className}} {{col.textAlign?'wux-picker-view-column-'+col.textAlign:''}}"><block wx:for="{{col.values}}" wx:for-item="value"><view class="wux-picker-view-column" data-picker-value="{{value}}">\n								{{col.displayValues&&col.displayValues.length?col.displayValues.index||'undefined':value}}\n</view></block></picker-view-column></block></picker-view></view></view></block></template>
