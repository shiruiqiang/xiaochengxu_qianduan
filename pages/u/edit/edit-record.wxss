page {background-color: #fff;}
.container{width:100vw;height:100vh}
.page-hd{width:78vw;margin:0 auto;}
.page-hd{font-size:30rpx;text-align: center;line-height:1.3;}
.page-hd .tit{padding-top:25vw;color:#b3b3b3;margin-bottom:30rpx;}
.page-hd .sub-tit{color:#f2394a;text-align: center;}
.page-hd .rate{font-weight: 700;font-size:32rpx;color:#f2394a;margin-bottom:44rpx;}
.page-hd .times{color:#f2394a;font-size:28rpx;}
.page-hd .tips{padding-top:25vw;color:#000;}
.page-bd{display: -webkit-flex;display: flex;-webkit-flex-direction: column;flex-direction: column;-webkit-align-items: center;align-items: center;position: absolute;top:64vh;width:100%;}
.page-bd .record-btn{width:240rpx;height:240rpx;margin:0 0 48rpx;position: relative;}
.page-bd .record-txt{color:#b3b3b3;line-height:1;}
.empty-box.page-bd{top:54vh;}
.empty-blank{width:464rpx;height:450rpx;background: url('http://wq.xinxao.com/addons/ss48_match/images/ic_mic_mute.png?1') no-repeat;background-size: 464rpx 450rpx;}
@-webkit-keyframes opac{from{opacity: 1;width:180rpx;height:180rpx;top:50%;left:50%;margin-left:-90rpx;margin-top:-90rpx;}
to{opacity : 0;width:240rpx;height:240rpx;top:0;left:0;}
}@keyframes opac{from{opacity: 1;width:180rpx;height:180rpx;top:50%;left:50%;margin-left:-90rpx;margin-top:-90rpx;}
to{opacity : 0;width:240rpx;height:240rpx;top:0;left:0;}
}.animate .w2{-webkit-animation-delay:.5s;animation-delay:.5s;}
.animate .w3{-webkit-animation-delay:1s;animation-delay:1s;}
.animate wx-view{position:absolute;border-radius:50%;background-color: rgba(242, 58, 75, .4);-webkit-animation:opac 1.5s infinite;animation:opac 1.5s infinite;}
.record-btn .w0{width:180rpx;height:180rpx;display:block;background:#f23b4d url('http://wq.xinxao.com/addons/ss48_match/images/ic_record_record_btn_normal.png?1');background-repeat: no-repeat;background-size: 180rpx 180rpx;margin-left:-90rpx;margin-top:-90rpx;position:absolute;top:50%;left:50%;border-radius:50%;}
.record-end__box{display: -webkit-flex;display: flex;margin:0 0 48rpx;position: relative;height:240rpx;-webkit-align-items: center;align-items: center;}
.record-end__box .save-btn{width:220rpx;height:220rpx;background:url('http://wq.xinxao.com/addons/ss48_match/images/ic_record_send_btn_normal.png?1');background-repeat: no-repeat;background-size: 220rpx 220rpx;}
.record-end__box .save-btn{display: -webkit-flex;display: flex;-webkit-align-items: center;align-items: center;-webkit-justify-content: center;justify-content: center;color:#fff;font-size:36rpx;margin:0 60rpx}
.record-end__box .s-btn{width:80rpx;height:80rpx;text-align: center;color:#bebebe;}
.record-end__box .s-btn:before{content:'';display:block;width:80rpx;height:80rpx;background-repeat: no-repeat;background-size: 80rpx 80rpx;margin-bottom:6rpx;}
.reset-btn:before{background-image:url('http://wq.xinxao.com/addons/ss48_match/images/ic_record_re_record_btn_normal.png?1');}
.test-btn:before{background-image:url('http://wq.xinxao.com/addons/ss48_match/images/ic_record_test_btn_normal.png?1');}
.stop-btn:before{background-image:url('http://wq.xinxao.com/addons/ss48_match/images/ic_record_test_stop_btn_normal.png?1');}
